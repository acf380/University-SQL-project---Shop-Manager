<html>
    <head>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link href="/stylesheets/warehouse.css"  rel="stylesheet" type="text/css" />
        <script src="/javascripts/warehouse.js" type="text/javascript"></script>
        <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="message">
            <% if(message.length) { %>
                <div class="alert alert-danger">
                    <%= message %>
                </div>
            <% }%>
        </div> 
        <div class="btn-group-wrapper"> 
            <div class="btn-group">
            <form action="/">
                <input type="submit" value="Magazyn">
            </form>
    
            <form action="/products">
                <input type="submit" value="Produkty">
            </form>
    
            <form action="/categories">
                <input type="submit" value="Kategorie">
            </form>
    
            <form action="/orders">
                <input type="submit" value="Zamówienia">
            </form>
    
            <form action="/ordersContents">
                <input type="submit" value="Zawartość Zamówień">
            </form>

            <form action="/returns">
                <input type="submit" value="Zwroty">
            </form>
    
            <form action="/complaints">
                <input type="submit" value="Reklamacje">
            </form>

            <form action="/carriers">
                <input type="submit" value="Przewoźnicy">
            </form>
                
            <form action="/states">
                <input type="submit" value="Stany">
            </form>
                
            <form action="/clients">
                <input type="submit" value="Klienci">
            </form>
        </div>

        <div class="tab-wrapper"> 
            <div class="tab-body-wrapper">
                <div class="tab-body2" id="tab2">
                    <table class="table">
                        <thead>
                        <tr>
                            <th></th>
                            <th>PRODUKT ID</th>
                            <th>ILOŚĆ</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <form action='/add' method="post">
                                <td><label type="hidden" size="5"/></td>
                                <td><input name="magazyn" size="5"/></td>
                                <td><input name="magazyn" size="5"/></td>
                                <td><input type="submit" value="Add!"></td>  
                            </form>
                        </tr> 
                        <tr>
                            <form action="/sumAll" method="post">
                                <td><label>Wartość magazynu: </label></td>
                                <td><input type="submit" value="Get!"></td> 
                            </form>
                            <td>
                                <div>
                                    <% if(sumAll.length) { %>
                                        <label>
                                            <%= sumAll[0].MAGAZYN %>
                                        </label>
                                    <% }%>
                                </div> 
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="tab-body" id="tab1">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>PRODUKT ID</th>
                            <th>ILOŚĆ</th>
                            <th>KATEGORIA</th>
                            <th>MARKA</th>
                            <th>MODEL</th>
                            <th>CENA</th>
                            <th>WAGA</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <% if(warehouse.length){
                        for(var i = 0; i< warehouse.length; i++) {%>  
                        <tr>
                            <th scope="row"><%= (i+1) %></th>
                            <td><label> <%=warehouse[i].PRODUKT_ID%> </label></td>
                            <td><label> <%=warehouse[i].ILOŚĆ%> </label></td>
                            <td><label> <%=warehouse[i].KATEGORIA%> </label></td>
                            <td><label> <%=warehouse[i].MARKA%> </label></td>
                            <td><label> <%=warehouse[i].MODEL%> </label></td>
                            <td><label> <%=warehouse[i].CENA%> </label></td>
                            <td><label> <%=warehouse[i].WAGA%> </label></td>
                            <td>
                                <button type="button" id ='edit<%= i %>' onclick="editRow('<%= i %>')">Edit!</button>                                
                            </td>  
                            <td>
                                <button type="button" id ='del<%= i %>' onclick="delRow('<%= warehouse[i].PRODUKT_ID %>')">Delete!</button>
                            </td>
                        </tr>

                        <% }
                                
                        }else{ %>
                            <tr>
                                <td colspan="3">No data</td>
                            </tr>
                            <% } %>    
                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>